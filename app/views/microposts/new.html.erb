<div class="col-lg-7 container">
  <h1>新規作成</h1>
  <%= form_with(model: @micropost, local: true) do |f| %>
    <div class="form-group">
      <%= f.text_area :content, class: "form-control", rows: 4 %>
    </div>
    <%= f.file_field :image %>
    
    <%= f.submit "投稿", class: "btn btn-primary", :style => "float: right;" %>
  <% end %>
    
</div>
