<div class="text-center">
  <h1>プロフィールを編集</h1>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <%= form_with(model: @user, local: true) do |f|%>
      <div class="form-group">
        <%= label :name, "名前" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :self_introduction, "自己紹介" %>
        <%= f.text_area :self_introduction, class: "form-control", rows: 4 %>
      </div>
      <%= f.file_field :image %>
      <%= f.submit "保存", class: "btn btn-primary", :style => "float: right;" %>
    <% end %>
  </div>
</div>