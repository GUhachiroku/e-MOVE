<div class="col-lg-7 container">
  <h1 class="text-center">お問い合わせ</h1>
  <%= form_with(model: @inquiry, local: true) do |f| %>
    <%= render "layouts/error_messages", model: f.object %>
    <div class="form-group">
      <%= f.label :name, "名前" %><span id="inquiry1">必須</span>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :email, "メールアドレス" %><span id="inquiry1">必須</span>
      <%= f.text_field :email, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :content, "内容" %><span id="inquiry1">必須</span>
      <%= f.text_area :content, class: "form-control", rows: 4 %>
    </div>
    <%= f.submit "送信", class: "btn btn-primary", :style => "float: right;" %>
  <% end %>
    
</div>
