<header class="mb-4">
  <nav class="navbar navbar-expand-sm navbar-dark bg-dark fixed-top">
    <a class="navbar-brand" href="/">e-MOVE</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
      <ul class="navbar-nav">
        
        <% if logged_in? %>
          <li class="nav-item active"><%= link_to "新規作成", new_micropost_path, class: "nav-link" %></li>
          <li class="nav-item active">
            <%= link_to user_path(current_user), target: "_self" do %>
              <%if current_user.image? %>
                <%= image_tag current_user.image.url, :size => "32x32", :style => "border-radius: 50%; margin-top: 4px;" %>
              <% else %>
                <i class="fas fa-user-circle", style="font-size: 2rem; margin-top: 4px;"></i>
              <% end %>
            <% end %>
          </li>
          <li class="nav-item active"><%= link_to "ログアウト", logout_path, method: :delete, class: "nav-link" %></li>
        <% else %>
          <div class="nav-item dropdown"></div>
            <li class="nav-item active"><%= link_to "新規作成", login_path, class: "nav-link" %></li>
            <li class="nav-item active"><%= link_to "サインアップ", signup_path, class: "nav-link" %></li>
            <li class="nav-item active"><%= link_to "ログイン", login_path, class: "nav-link" %></li>
        <% end %>      
          
      </ul>
    </div>
  </nav>
</header>