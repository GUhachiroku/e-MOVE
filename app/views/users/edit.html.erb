<div class="text-center">
  <h1>プロフィールを編集</h1>
</div>
<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <%= form_with(model: @user, local: true) do |f|%>
        <%= render "layouts/error_messages", model: f.object %>
        <div class="form-group">
          <%= label :name, "名前" %><span id="inquiry1">&nbsp;必須&nbsp;</span>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :self_introduction, "自己紹介" %>
          <%= f.text_area :self_introduction, class: "form-control", rows: 4 %>
        </div>
        <%= f.file_field :image %>
        <%= f.submit "保存", class: "btn btn-primary", :style => "float: right;" %>
      <% end %>
    </div>
  </div>
</div>